{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "IntelliSense Sanity Check",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/scripts/check_intellisense.ps1",
                "-Config",
                "Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "test"
        }
    ]
}
